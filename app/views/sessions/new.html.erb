<h1>Log In</h1>

<%= form_for @user, url: { controller: 'sessions', action: 'create', method: 'post' } do |f| %>
    <%= f.label :name %>
    <%= f.collection_select :name, User.all, :name, :name %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    
    <%= f.submit 'Sign In' %><br>
<% end %>